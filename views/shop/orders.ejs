    <body>
    <%- include('../includes/nav.ejs') %>
    <main>
        <% if(orders.length <= 0) { %>
            <h1>Nothing there!</h1>
        <% } else { %>
            <ul>
                <% orders.forEach(order => { %>
                    
                    <li>
                        <h1># <%= order.id %></h1>
                        <ul class="orders_products">
                            <% order.products.forEach(p => { %>
                                
                                <li class="orders__products-list"><%= p.product.title %> (<%= p.quantity %>)</li>

                            <% }); %>
                        </ul>
                    </li>
                
                <% }); %>
            </ul>
        <% } %>
    </main>
    <%- include('../includes/end.ejs') %>