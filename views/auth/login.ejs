<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" type="text/css" href="/css/auth.css">
</head>
<body>
    <%- include('../includes/nav.ejs') %>
    <main>
        <% if (errorMessage) { %>
            <div class="user-message user-message--error"><%= errorMessage %></div>
        <% } %>
        <form class="login-form" action="/login" method="POST">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <div class="form-control">
                <label for="title">Email</label>
                <input type="email" id="email" value="<%= oldInput.email %>" class = "<%= validationErrors.find(e => e.param === 'email') ? 'invalid' : '' %>" name="email">
            </div>
            <div class="form-control">
                <label for="imageUrl">Password</label>
                <input type="password" id="password" value="<%= oldInput.password %>" class = "<%= validationErrors.find(e => e.param === 'password') ? 'invalid' : '' %>" name="password">
            </div>
            <button type="submit">Login</button>
        </form>
        <div class="centered">
            <a href="/reset">Reset Password</a>
        </div>
    </main>
<%- include('../includes/end.ejs') %>